{
  "id": "blog-post",
  "label": "Blog post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Uid",
          "placeholder": "URL slug for the article"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured image",
          "constraint": {
            "width": 2000,
            "height": 1500
          },
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Title of the article"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish date",
          "placeholder": "Date the article was published"
        }
      },
      "incentive": {
        "type": "Text",
        "config": {
          "label": "Incentive",
          "placeholder": ""
        }
      },
      "imageSource": {
        "type": "Text",
        "config": {
          "label": "Image Source",
          "placeholder": "Image source / credits for author"
        }
      },
      "imageSourceRichText": {
        "type": "StructuredText",
        "config": {
          "label": "Image Source Rich Text",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "subtitle": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "post_link_with_custom_title": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}